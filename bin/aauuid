PROGRAM_NAME="AAuuid"
PROGRAM_VERSION="0.1"
## Replace the > in the CONSOLE_THINGY
## with your own string like ~$ or ~#
## or whatever need. Leave a space for
## better esthetics in the console.
CONSOLE_THINGY="> "
aauuid(){
	case "$1" in
		--version) echo "$PROGRAM_VERSION"; ;;
		--help)
			cat <<EOF

$PROGRAM_NAME
   Version $PROGRAM_VERSION

usage:
	aauuid				Generates a pseudo-uuid
	auuid -n x			Generates x number of pseudo-uuids
	aauuid --version 		Shows aauuid version.
	aauuid --help 			Shows this screen.
EOF
	;;
	*)
		run "$@"
	;;
	esac
}
gen_aauuid(){
	cat /dev/urandom | tr -dc '0-9a-f' | fold -w 32 | head -n 1 | sed -e "s/\(........\)\(....\)\(....\)\(....\)\(............\)/\1-\2-\3-\4-\5/"
}
run(){
	case "$1" in
		-n)
			loops="$2"
		;;
		*)
			loops="1"
		;;
	esac
	for i in "$(seq 1 $loops)" ; do
		gen_aauuid
	done
}
aauuid "$@"
